%h1 All Movies

%table#movies
    %thead
        %tr
            %th= link_to 'Movie Title', :sort_by=>'title'
            %th= link_to 'Rating', :sort_by=>'rating'
            %th= link_to 'Release Date', :sort_by=>'release_date'
            %th More Info 
    %tbody
        - @movies.each do |movie|
            %tr
                %td= movie.title
                %td= movie.rating
                %td= movie.release_date
                %td= link_to "More about #{movie.title}", movie_path(movie)
                -# = debug(movie)
                -# = movie.inspect
        = link_to 'Add new movie', new_movie_path
        
= form_tag movies_path, :id => 'ratings_form', :method => :get do
    Include: 
    - @all_ratings.each do |rating|
        = rating
        = check_box_tag "ratings[#{rating}]",1,@checked[rating]
    = submit_tag 'Refresh', :id => 'ratings_submit'

%h1 Search TMDb for a movie

= form_tag :action => 'search_tmdb' do

    %label{:for => 'search_terms'} Search Terms
    = text_field_tag 'search_terms'
    = submit_tag 'Search TMDb'